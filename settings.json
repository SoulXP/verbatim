{
    "global": {
        "build_path": "${WORKSPACE}/build/cmake",
        "test_path": "${WORKSPACE}/build/cmake/tests"
    },

    "cmake": {
        "macosx": {
            "configure": [
                {
                    "name": "default",
                    "generator": "Ninja",
                    "arch": "default",
                    "flags": ["--no-warn-unused-cli"],
                    "toolset": [],
                    "definitions": [
                        {
                            "name":"CMAKE_EXPORT_COMPILE_COMMANDS",
                            "type": "BOOL",
                            "value": true
                        }
                    ]
                }
            ],

            "build": [
                {
                    "name": "default",
                    "type": "release",
                    "target": "ALL_BUILD",
                    "flags": [
                        {
                            "name": "-j",
                            "value": 14
                        }
                    ]
                },

                {
                    "name": "defaultd",
                    "type": "debug",
                    "target": "ALL_BUILD",
                    "flags": [
                        {
                            "name": "-j",
                            "value": 14
                        }
                    ]
                }
            ]
        },

        "win32": {
            "configure": [
                {
                    "name": "default",
                    "generator": "default",
                    "arch": "x64",
                    "flags": ["--no-warn-unused-cli"],
                    "toolset": [
                        {
                            "name": "host",
                            "value": "x64"
                        }
                    ],
                    "definitions": [
                        {
                            "name":"CMAKE_EXPORT_COMPILE_COMMANDS",
                            "type": "BOOL",
                            "value": true
                        }
                    ]
                }
            ]
        },

        "build": [
            {
                "name": "default",
                "type": "release",
                "flags": [
                    {
                        "name": "-j",
                        "value": 14
                    }
                ]
            },

            {
                "name": "defaultd",
                "type": "debug",
                "flags": [
                    {
                        "name": "-j",
                        "value": 14
                    }
                ]
            }
        ]
    }
}
